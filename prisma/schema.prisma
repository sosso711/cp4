// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id       Int     @id @default(autoincrement())
  name     String
  email    String? @unique
  password String?
  lists    lists[]

}

model lists {
  id         Int         @id @default(autoincrement())
  createDate DateTime?
  name       String
  userId     Int?
  user       user?       @relation(fields: [userId], references: [id])
  listItems  listItems[]

}

model Items {
  id        Int         @id @default(autoincrement())
  name      String
  listItems listItems[]
  validate  Boolean     @default(false)


}

model listItems {
  id       Int     @id @default(autoincrement())
  validate Boolean @default(false)
  itemId   Int
  items    Items   @relation(fields: [itemId], references: [id])
  listId   Int
  lists    lists   @relation(fields: [listId], references: [id])



}
